<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cbItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/checkbox_margin"
        android:layout_marginRight="@dimen/add_margin"
        android:layout_toStartOf="@+id/ibMarker1"
        android:background="?android:attr/selectableItemBackground"
        android:checked="true"
        android:text="@string/item"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/sub_size"
        app:buttonTint="@color/primary_text" />

    <ImageButton
        android:id="@+id/ibMarker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@null"
        app:srcCompat="@drawable/marker"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/add_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>
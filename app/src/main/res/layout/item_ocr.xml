<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cbItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/checkbox_margin"
        android:layout_marginRight="@dimen/checkbox_margin"
        android:background="?android:attr/selectableItemBackground"
        android:text="Item"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/body_size"
        app:buttonTint="@color/primary_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/ibMarker1" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/ibMarker1">

        <EditText
            android:id="@+id/etChangeItem"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:inputType="textCapSentences"
            android:maxLines="1"
            android:paddingRight="@dimen/checkbox_margin"
            android:text="Item"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/body_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="ItemItemItemItemItemItemIt"
            android:textColor="@color/black"
            android:textSize="@dimen/body_size"
            android:visibility="visible" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/ibMarker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@null"
        app:srcCompat="@drawable/marker"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/checkbox_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/ibMarker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/checkbox_margin"
        android:background="@null"
        android:tint="@color/colorPrimary"
        android:visibility="gone"
        app:srcCompat="@drawable/marker2" />

</RelativeLayout>
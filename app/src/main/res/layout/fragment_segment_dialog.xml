<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_segment"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center" android:orientation="vertical"  >

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rlColorTop"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@drawable/gradient2">

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_weight"
            android:layout_below="@+id/rlColorTop"
            android:background="@color/colorPrimaryLight" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dialog_circle"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_create_new_folder"
            android:tint="@color/white"
            android:layout_alignTop="@+id/imageView5" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlTitle"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/add_margin"
            android:text="Create New Category"
            android:textAlignment="textStart"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sub_size"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNewSegment"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginLeft="@dimen/add_margin"
            android:layout_marginRight="@dimen/add_margin"
            android:backgroundTint="@color/colorPrimaryLight"
            android:hint="e.g. Fruits and Vegetables"
            android:imeOptions="actionDone"
            android:inputType="textCapSentences"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sub_size"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etNewSegment">

            <Button
                android:id="@+id/bCancelSegment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/bAddSegment"
                android:layout_alignBottom="@+id/bAddSegment"
                android:layout_alignEnd="@+id/bAddSegment"
                android:layout_marginEnd="84dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Cancel"
                android:textColor="@color/secondary_text"
                android:textStyle="bold"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/bAddSegment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="?android:attr/selectableItemBackground"
                android:text="Create"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/button_text_size"/>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>

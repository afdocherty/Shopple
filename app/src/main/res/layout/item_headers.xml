<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/completed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rvItem"
    android:layout_marginTop="@dimen/add_margin"
    android:layout_marginLeft="@dimen/section_margin"
    android:layout_marginBottom="@dimen/padding">

    <ImageButton
        android:id="@+id/ibDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvCompleted"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/section_margin"
        android:background="@null"
        app:srcCompat="@drawable/ic_delete_sweep" />

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text=" Completed Items"
        android:textColor="?attr/colorAccent"
        android:textSize="@dimen/body_size"
        android:textStyle="bold" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/ivCloseDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="@color/lightGray"
            app:srcCompat="@drawable/ic_close"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/tvStartTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/add_margin"
            android:text="Start My Trip"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/body_size"
            android:textStyle="bold" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_weight"
        android:background="@color/colorPrimaryLight"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/checkbox_margin">

        <RelativeLayout
            android:id="@+id/rlNearbyStores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginLeft="@dimen/checkbox_margin"
            android:layout_marginRight="@dimen/checkbox_margin"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView2"
                android:text="Nearby Stores"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/body_size" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView6"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/checkbox_margin"
                android:layout_marginRight="@dimen/add_margin"
                app:srcCompat="@drawable/ic_search" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/div1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlNearbyStores"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/divider_side_margins"
            android:layout_marginStart="@dimen/divider_side_margins"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/divider" />

        <RelativeLayout
            android:id="@+id/rlMyStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/div1"
            android:layout_margin="@dimen/checkbox_margin"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageView3"
                android:text="My Store"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/body_size" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/checkbox_margin"
                android:layout_marginRight="@dimen/add_margin"
                app:srcCompat="@drawable/ic_favorite"
                android:backgroundTint="@color/yellow"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
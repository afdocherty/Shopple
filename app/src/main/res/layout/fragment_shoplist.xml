<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlContainer"
        android:layout_below="@+id/toolbar">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvShopList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etAddShopList"
            android:layout_marginStart="@dimen/padding"
            android:background="@color/lighterGray"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/rlNoLists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_fileName="EmptyState.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ivDots"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/checkbox_margin"
            android:text="Your Shopple Cart Is Empty"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sub_size"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivDots"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_above="@+id/tvClickNew"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:tint="@color/secondary_text"
            app:srcCompat="@drawable/ic_more_horiz" />

        <TextView
            android:id="@+id/tvClickNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ivDirection"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/checkbox_margin"
            android:text="Click here to start a new list now!"
            android:textAlignment="center"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/sub_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivDirection"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/tvClickNew"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="56dp"
            android:tint="@color/secondary_text"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_subdirectory_arrow_right" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddShopList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:srcCompat="@drawable/ic_add"
        app:useCompatPadding="true" />

</RelativeLayout>
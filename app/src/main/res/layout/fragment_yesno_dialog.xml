<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yesno"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center" android:orientation="vertical"  >

    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/add_margin"
            android:text="Title"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/body_size"
            android:textStyle="bold" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_weight"
        android:background="@color/colorPrimaryLight"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlTitle"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_marginTop="@dimen/add_margin"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/add_margin"
            android:layout_marginRight="@dimen/add_margin"
            android:backgroundTint="@color/colorPrimaryLight"
            android:text="Are you sure?"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sub_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvQuestion">

            <Button
                android:id="@+id/bNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/bConfirm"
                android:background="?android:attr/selectableItemBackground"
                android:minWidth="@dimen/yesno_button_width"
                android:text="No"
                android:textColor="@color/secondary_text"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="?android:attr/selectableItemBackground"
                android:text="Yes"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:minWidth="@dimen/yesno_button_width" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/completed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rvItem"
    android:layout_marginTop="@dimen/add_margin"
    android:layout_marginLeft="@dimen/section_margin"
    android:layout_marginBottom="@dimen/padding">

    <ImageButton
        android:id="@+id/ibDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/trash_margin"
        android:background="@null"
        app:srcCompat="@drawable/ic_delete_sweep"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvCompletedHeader" />

    <TextView
        android:id="@+id/tvCompletedHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text=" Completed Items"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/body_size"
        android:textStyle="bold" />
</RelativeLayout>
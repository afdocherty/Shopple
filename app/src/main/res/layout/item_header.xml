<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <View
        android:id="@+id/vColor"
        android:layout_width="4dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/checkbox_margin"
        android:layout_marginStart="@dimen/checkbox_margin"
        android:background="@color/colorPrimaryLight" />



    <!--<ViewSwitcher
        android:id="@+id/vsHeaderSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:measureAllChildren="false"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/vColor">

android:layout_toEndOf="@+id/vColor"
        -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/vColor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_centerVertical="true">


        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Header"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/body_size"
            android:textStyle="bold"
            android:layout_weight="1.0"
            android:layout_marginRight="@dimen/checkbox_margin"/>

        <ImageView
            android:id="@+id/ivCategorize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            app:srcCompat="@drawable/marker"
            android:padding="@dimen/checkbox_margin"/>

        <ImageView
            android:id="@+id/ivFinishEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/checkbox_margin"
            android:visibility="gone"
            app:srcCompat="@drawable/marker2" />

        <!--
        <EditText
            android:id="@+id/etHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:maxLines="1"
            android:paddingTop="0dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/darkerOrange"
            android:textSize="22sp" />
            -->

    </LinearLayout>
    <!--</ViewSwitcher>-->

</RelativeLayout>